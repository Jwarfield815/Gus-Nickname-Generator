<!DOCTYPE html>
<html>
    <head>
        <link rel="stylesheet" href="/css/fonts.css" />
        <link rel="stylesheet" href="/css/styles.css" />
        <script src="/scripts/defNames.js"></script>
        <script src="/scripts/changeFont.js"></script>
    </head>
    
    <body>
        {{>header}}
        <div id="content">
            <div id="names"></div>
        </div>
        <script>
            const container = document.getElementById('names');
            container.textContent += '';
            allNames.forEach((name) => {
                container.innerHTML += `<a
                    class="nameLink"
                    onmouseover="sessionStorage.scrollpos = window.scrollY"
                    href="/names/${encodeURIComponent(name.name)}">
                        <p>${name.name}</p>
                    </a>`;
            });
            let scrollPos = parseInt(window.location.search.replace('?', ''));
            window.scrollTo(0, scrollPos || 0);
        </script>
    </body>
</html>